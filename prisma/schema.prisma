datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id    Int    @id @default(autoincrement())
  emoji String
  title String
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  sessions  Session[]
  scores    Score[]
  guesses   Guess[]   @relation("UserGuesses")  
}

model Session {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime  @default(now())
  rounds    Round[]
}

model Score {
  id        Int    @id @default(autoincrement())
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
  points    Int
  createdAt DateTime @default(now())
}

model Round {
  id         Int       @id @default(autoincrement())
  sessionId  Int
  session    Session   @relation(fields: [sessionId], references: [id])
  emoji      String
  correctAnswer String
  createdAt  DateTime  @default(now())
  guesses    Guess[]
}

model Guess {
  id        Int      @id @default(autoincrement())
  roundId   Int
  userId    Int
  round     Round    @relation(fields: [roundId], references: [id])
  user      User     @relation("UserGuesses", fields: [userId], references: [id])
  guess     String
  isCorrect Boolean
  createdAt DateTime @default(now())
}